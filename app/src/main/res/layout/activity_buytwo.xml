<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techkshetra.tpc1.h2ocustomer.BuytwoActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/twobuytool">
    </include>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@id/twobuytool">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/can3"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="2 Litre"
            android:gravity="center"
            android:textColor="#000000"/>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager2"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="97dp">


        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Linearlayout_dot2"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="189dp"
            android:layout_marginLeft="97dp"/>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="267dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Quantity"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="120dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="307dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Empty Can"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvempty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="340dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Type"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spintype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="370dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Time"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spintime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvpriceshow"
            android:layout_marginStart="150dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Proceed to payment"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>
